<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        mc:Ignorable="d"
        Width="450" ResizeMode="NoResize" Height="400"
        Title="Active View - Available Filters">
    <Window.Resources>
        <CollectionViewSource
            Source="{Binding Source={x:Static Application.Current}}"
            x:Key="FilterName" />
        <CollectionViewSource
            Source="{Binding Source={x:Static Application.Current}}"
            x:Key="FilterVisibility" />
        <CollectionViewSource
            Source="{Binding Source={x:Static Application.Current}}"
            x:Key="FilterHalfTone" />
        <CollectionViewSource
            Source="{Binding Source={x:Static Application.Current}}"
            x:Key="FilterTransparency" />
    </Window.Resources>
    <StackPanel Margin="10,0,10,0">
        <Button Height="25"  Margin="0,10,0,10" Content="Refresh Filter List" Click="get_active_filters_click"/>
        <StackPanel Height="225">
            <ListView ItemsSource="{Binding Source={StaticResource FilterName}}"
                      ItemsSource="{Binding Source={StaticResource FilterVisibility}}"
                      ItemsSource="{Binding Source={StaticResource FilterHalfTone}}"
                      ItemsSource="{Binding Source={StaticResource FilterTransparency}}">
            <ListView.View>
                <GridView AllowsColumnReorder="True">
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FilterName}" Header="Name" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FilterVisibility}" Header="Visibility" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FilterHalftone}" Header="Halftone" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding Path=FilterTransparency}" Header="Transparency" Width="Auto"/>
                </GridView>
            </ListView.View>

        </StackPanel>
        <Grid Height="100">
            <Button Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="add_filters"/>
            <Button Content="Remove" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="remove_filters"/>
            <Button Content="Edit / New" HorizontalAlignment="Left" Margin="328,51,0,0" VerticalAlignment="Top" Width="75" Click="edit_filters"/>
            <TextBox HorizontalAlignment="Left" Height="19" Margin="10,51,0,0" TextWrapping="Wrap" Text="All document filters are defined and modified here:" VerticalAlignment="Top" Width="293"/>
        </Grid>
    </StackPanel>
</Window>