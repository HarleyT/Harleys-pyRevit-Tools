<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="450" ResizeMode="NoResize" Height="400"
        Title="Active View - Filters">
    <StackPanel Margin="10,0,10,0">
        <StackPanel Height="200">
            <ListView>
                <ListView.View>
                    <GridView AllowsColumnReorder="True">
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>
        <Grid Height="100">
            <Button Content="Add" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Remove" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75"/>
            <Button Content="Edit / New" HorizontalAlignment="Left" Margin="328,51,0,0" VerticalAlignment="Top" Width="75"/>
            <TextBox HorizontalAlignment="Left" Height="19" Margin="10,51,0,0" TextWrapping="Wrap" Text="All document filters are defined and modified here:" VerticalAlignment="Top" Width="293"/>
        </Grid>
    </StackPanel>
</Window>