<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello World"
        Width="350" ResizeMode="NoResize" SizeToContent="Height" Height="600">
    <StackPanel Margin="10">
        <Label Content="Select your View Set below:" Margin="0,0,0,10" />
        <ComboBox x:Name="show_viewsets" SelectionChanged="viewset_changed" VerticalAlignment="Stretch">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <TextBlock Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <TextBox x:Name="textbox" Height="46" FontSize="18" FontWeight="Heavy" VerticalContentAlignment="Center" Padding="10,0,10,0"/>
    </StackPanel>
</Window>