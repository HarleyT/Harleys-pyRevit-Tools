<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="350" ResizeMode="NoResize" SizeToContent="Height"
        Title="Hello World">
    <StackPanel Margin="10,0,10,0">
        <Label Content="Enter your name inside the box below"/>
        <TextBox Height="30" TextWrapping="Wrap" TextAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Button Content="Say Hello" Height="50" Margin="0,10" Click="say_hello"/>
    </StackPanel>
</Window>