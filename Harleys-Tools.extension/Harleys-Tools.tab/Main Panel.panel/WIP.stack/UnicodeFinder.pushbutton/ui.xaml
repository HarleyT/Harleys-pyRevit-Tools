<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unicode Search" Height="200" Width="400">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" FontSize="18" FontWeight="Bold">
            Search Sheets for Unicode Characters
        </TextBlock>
        <Button Name="searchButton" Content="Search" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,60,0,0" Width="100" Click="SearchButton_Click" />
        <TextBox Name="resultTextBox" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" Width="300" Height="40" IsReadOnly="True" TextWrapping="Wrap" />
    </Grid>
</Window>